<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnlyPractice</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="top"> 
   <h1> Welcome to ClubHouse </h1>
   
   <div>  <% if user_signed_in? %>
          Welcome!   <%= current_user.email%>
          <% else %>
            login
            <% end %>
   </div>
   <div> 
     <% if user_signed_in? %>
             <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "deleteBtn" %>
          <% else %>
           <%= link_to "Sign Up", new_user_registration_path, class: "signUpBtn" %>
            <% end %>
   </div>
   </div>
    <%= yield %>
  </body>
</html>
